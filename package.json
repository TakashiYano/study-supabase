{
  "name": "nexst-tailwind",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "run-p dev:*",
    "dev:next": "next dev",
    "dev:path": "pathpida --enableStatic --ignorePath .gitignore --output src/lib/const --watch",
    "build": "pathpida --enableStatic --ignorePath .gitignore --output src/lib/const && next build",
    "start": "next start",
    "serve": "run-s build start",
    "lint": "next lint",
    "prettier": "prettier --check .",
    "unit": "jest",
    "e2e": "playwright test",
    "test": "run-p -l -c --aggregate-output lint prettier unit",
    "fix": "run-s -l -c fix:lint fix:prettier",
    "fix:lint": "next lint --fix",
    "fix:prettier": "prettier --write .",
    "env": "vc env pull .env.local",
    "prepare": "husky install"
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "autoprefixer": {}
    }
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.24.0",
    "next": "12.3.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-error-boundary": "4.0.10"
  },
  "devDependencies": {
    "@playwright/test": "1.35.0",
    "@tailwindcss/forms": "0.5.3",
    "@tailwindcss/line-clamp": "0.4.4",
    "@tailwindcss/typography": "0.5.9",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "14.0.0",
    "@testing-library/user-event": "14.4.3",
    "@types/jest": "29.5.2",
    "@types/node": "18.16.17",
    "@types/react": "18.2.11",
    "@types/react-test-renderer": "18.0.0",
    "@typescript-eslint/eslint-plugin": "5.59.9",
    "@typescript-eslint/parser": "5.59.9",
    "autoprefixer": "10.4.14",
    "eslint": "8.42.0",
    "eslint-config-next": "12.3.4",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import-access": "1.1.2",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "eslint-plugin-sort-destructure-keys": "1.5.0",
    "eslint-plugin-tailwindcss": "3.12.1",
    "eslint-plugin-testing-library": "5.11.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "jest-environment-jsdom": "^29.0.0",
    "lint-staged": "13.2.2",
    "npm-run-all2": "5.0.0",
    "pathpida": "0.20.1",
    "postcss": "8.4.24",
    "prettier": "2.8.8",
    "react-test-renderer": "18.2.0",
    "tailwindcss": "3.3.2",
    "typescript": "5.1.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix .",
      "prettier --write ."
    ],
    "**/*.{json,md,mdx,css,html,yml,yaml,scss}": [
      "prettier --write ."
    ]
  }
}
